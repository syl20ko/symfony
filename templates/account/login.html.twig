{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <div class="py-3 px-3 rounded" style="background-color:#2FA4E7">
                    <h1 style="color:white" class="p-1">Connectez-vous !</h1>

                    {% if hasError %}
                    <div class="alert alert-danger text-center">L'adresse email ou le mot de passe est invalide</div>{% endif %}
                    
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email" style="color:white">Email</label>
                            <input class="form-control" id="email" name="_username" placeholder="Adresse email..." type="text" value="{{ username }}"required>
                        </div>
                        <div class="form-group">
                            <label for="password" style="color:white">Mot de passe</label>
                            <input class="form-control" id="password" name="_password" placeholder="Mot de passe ..." type="text" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" type="submit">Connexion</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
