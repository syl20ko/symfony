{% extends 'base.html.twig' %}

{% block title %}Fiche de l'entreprise
    {{ entreprise.nom }}
{% endblock %}

{% block body %}


    <div class="image-container mb-3">
        <div class="text">{{ entreprise.nom}}</div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="card ml-5">
                    <img alt="Card image cap" class="card-img-top img-thumbnail rounded" src="https://randomuser.me/api/portraits/men/41.jpg">
                    <div class="card-body">
                        <h5 class="card-title">{{ entreprise.leader.firstName}}
                            {{ entreprise.leader.lastName}}</h5>
                    </div>
                    <div class="card-footer text-muted">
                        <small>
                            <strong>Membre depuis le :</strong>
                            {{ entreprise.leader.createdAt | date('d/m/Y') }}</small>
                    </br>
                    <small>
                        <strong>Dernière connexion le :</strong>
                        {{ entreprise.leader.lastLogin | date('d/m/Y à h:i') }}</small>
                    <p class="card-text mt-3">{{ entreprise.leader.description}}</p>
                    <a class="btn btn-primary" href="#">Go somewhere</a>
                </div>
            </div>
            <ul class="list-group w-80 ml-5 mt-2">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Cras justo odio
                    <span class="badge badge-primary badge-pill">14</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Dapibus ac facilisis in
                    <span class="badge badge-primary badge-pill">2</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Morbi leo risus
                    <span class="badge badge-primary badge-pill">1</span>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="card w-100">
                {% for article in article %}
                    <div class="card-header">
                        <h5>{{ article.title}}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ article.content}}</p>
                        <p class="card-text float-right">{{ article.createdAt | date("d/m/Y h:i")}}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="card w-100">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                </div>
            </div>
