{% extends 'base.html.twig' %}

{% block title %}Derniers Articles Liider
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div
        class="container">

        <!-- Page Heading -->
        <h2 class="my-4">{{ articles|length }}
            articles sont disponibles
        </h1>
        <hr>

        <!-- Project One -->
        {% for article in articles %}
            <div class="row">
                <div class="col-md-5">
                    <a href="#">
                        <img alt="" class="img-fluid rounded mb-3 mb-md-0" src="http://placehold.it/500x300">
                    </a>
                </div>
                <div class="col-md-7">
                    <h3>{{ article.title }}</h3>
                    <p class="mt-4">{{article.content | raw | slice(0, 150) ~ '...'}}</p>
                    <small>Créé le
                        {{ article.createdAt|date("d/m/Y")}}
                        par
                        <a href="{{ path('entreprise_show' , {slug : article.author.entreprise.slug} ) }}">{{ article.author.firstName}}</a>
                    </small>
                    <p class="mt-3"><a class="btn btn-dark" href="{{ path('show_article' , {slug : article.slug} ) }}">Lire l'article</a></p>
                </div>
            </div>
            <hr>
        {% endfor %}
        <hr>

        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a aria-label="Previous" class="page-link" href="#">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a aria-label="Next" class="page-link" href="#">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

    </div>
    <!-- /.container -->
{% endblock %}
